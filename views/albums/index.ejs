<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Albums</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Albums</h1>

        <!-- Search Form -->
        <form action="/albums/search" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search albums...">
                <button type="submit" class="btn btn-custom">Search</button>
            </div>
        </form>

        <!-- Add New Album Button -->
        <div class="text-end mb-3">
            <a href="/albums/new" class="btn btn-custom">Add New Album</a>
        </div>

        <% if (albums.length > 0) { %>
            <ul class="list-group">
                <% albums.forEach(album => { %>
                    <li class="list-group-item bg-dark text-white mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="h4"><%= album.albumName %></h2>
                                <p>Artist: <%= album.artist %></p>
                                <p>Genre: <%= album.genre %></p>
                                <p>Year: <%= album.year %></p>
                                <img src="<%= album.albumImageUrl %>" alt="<%= album.albumName %> cover" class="img-thumbnail" width="100">
                                <img src="<%= album.artistImageUrl %>" alt="<%= album.artist %>" class="img-thumbnail" width="100">
                            </div>
                            <div>
                                <a href="/albums/<%= album._id %>" class="btn btn-info btn-sm">View</a>
                                <a href="/albums/<%= album._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/albums/<%= album._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p class="text-center">No albums found.</p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>
</html>

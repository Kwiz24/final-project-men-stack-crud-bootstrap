<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Music App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container mt-5">
    <h1 class="text-center mb-4">Welcome to MusicApp</h1>

    <!-- Search Form -->
    <form action="/albums/search" method="get" class="mb-4">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search albums...">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>

    <div class="row">
      <div class="col-md-6">
        <h2>Featured Albums</h2>
        <div id="albumsCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% albums.forEach((album, index) => { %>
              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <img src="<%= album.albumImageUrl %>" class="d-block w-100" alt="<%= album.albumName %>">
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= album.albumName %></h5>
                  <p><%= album.artist %></p>
                  <a href="/albums/<%= album._id %>" class="btn btn-info">View</a>
                  <a href="/albums/<%= album._id %>/edit" class="btn btn-warning">Edit</a>
                  <form action="/albums/<%= album._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#albumsCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#albumsCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <div class="col-md-6">
        <h2>Top Artists</h2>
        <div id="artistsCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% albums.forEach((album, index) => { %>
              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <img src="<%= album.artistImageUrl %>" class="d-block w-100" alt="<%= album.artist %>">
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= album.artist %></h5>
                </div>
              </div>
            <% }) %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#artistsCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#artistsCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/player') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/scripts.js"></script>
</body>
</html>

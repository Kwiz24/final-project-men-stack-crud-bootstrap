<!DOCTYPE html>
<html>
<head>
  <title>Albums</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <div class="container mt-5">
    <h1>Albums</h1>
    <a href="/albums/new" class="btn btn-primary mb-3">Add New Album</a>
    <% if (albums.length > 0) { %>
      <div class="list-group">
        <% albums.forEach(album => { %>
          <a href="/albums/<%= album._id %>" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= album.albumName %></h5>
              <small><%= album.year %></small>
            </div>
            <p class="mb-1">Artist: <%= album.artist %></p>
            <p class="mb-1">Genre: <%= album.genre %></p>
            <img src="<%= album.albumImageUrl %>" alt="<%= album.albumName %> cover" class="img-thumbnail" width="100">
            <img src="<%= album.artistImageUrl %>" alt="<%= album.artist %> picture" class="img-thumbnail" width="100">
          </a>
        <% }); %>
      </div>
    <% } else { %>
      <p>No albums found.</p>
    <% } %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
